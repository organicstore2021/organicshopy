<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Create a shopify discount product-->
        <record id="shopify_discount_product" model="product.product">
            <field name="name">Shopify Discount Product</field>
            <field name="type">service</field>
            <field name="default_code">shopifydiscountproduct</field>
        </record>
        <!--Create a shopify Gift Card product-->
        <record id="shopify_gift_card_product" model="product.product">
            <field name="name">Shopify Gift Card Product</field>
            <field name="type">service</field>
            <field name="default_code">shopifygiftcardproduct</field>
        </record>

        <record id="shopify_shipping_product" model="product.product">
            <field name="name">Shopify Shipping Product</field>
            <field name="type">service</field>
            <field name="default_code">shopify_shipping</field>
        </record>

        <!--Below product is used for TIP-->
        <record id="shopify_tip_product" model="product.product">
            <field name="name">TIP Product</field>
            <field name="type">service</field>
            <field name="default_code">shopifytip</field>
        </record>

        <!--Create a shopify refund Adjustment product,
        It used to set this product while customers provide a custom refund on the Shopify store.-->
        <record id="shopify_refund_adjustment_product" model="product.product">
            <field name="name">Shopify Refund Adjustment Product</field>
            <field name="type">product</field>
            <field name="default_code">shopifyrefundadjustmentproduct</field>
            <field name="invoice_policy">order</field>
        </record>

    </data>
</odoo>
